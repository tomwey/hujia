<table class="table table-hover">
  <tr class="head">
    <td class="first">ID</td>
    <td>教练或驾校</td>
    <td>代金券面额</td>
    <td>代金券有效期</td>
    <td>代金券剩余数量</td>
    <td>at</td>
    <td style="width:140px"></td>
  </tr>
  
  <% @appointments.each do |appointment| %>
  <tr>
    <td class="first"><%= appointment.id %></td>
    <td><%= render_appointable_name(appointment) %></td>
    <td><%= render_appointment_coupon_value(appointment) %></td>
    <td><%= render_appointment_coupon_duration(appointment) %></td>
    <td><%= render_appointment_coupon_left_count(appointment) %></td>
    <td><%= l appointment.created_at, :format => :short %></td>
    <td><%= render_appointment_coupon_status(appointment) %></td>
  </tr>
  <% end %>
</table>