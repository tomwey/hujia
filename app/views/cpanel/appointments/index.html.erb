<% content_for :sitemap do %>
  <span class="current">预约信息</span>
<% end %>

<h2>预约信息列表</h2>
<table class="table table-hover">
  <tr class="head">
    <td class="first">ID</td>
    <td>用户名</td>
    <td>真实姓名</td>
    <td>预约类型</td>
    <td style="width:200px">预约对象名字</td>
    <td>at</td>
  </tr>
  
  <% @appointments.each do |appointment| %>
  <tr>
    <td class="first"><%= appointment.id %></td>
    <td><%= appointment.user.try(:nickname) %></td>
    <td><%= appointment.user.profile.real_name if appointment.user.profile %></td>
    <td><%= render_appointable_type(appointment) %></td>
    <td><%= render_appointable_name(appointment) %></td>
    <td><%= l appointment.created_at, :format => :short %></td>
  </tr>
  <% end %>
</table>

<div style="text-align:center;"><%= will_paginate @appointments %></div>