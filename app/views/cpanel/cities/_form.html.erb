<%= simple_form_for [:cpanel, @city], :html => { :class => "form-horizontal", :enctype => "multipart/form-data" } do |f| %>
  <%= render "shared/error_messages", :target => @city %>
  <fieldset>
    <legend><%= legend %></legend>
    <%= f.input :name, :label => "城市名称", placeholder: "例如：成都" %>
    <%= f.input :code, :label => "代码", placeholder: "例如：510000", hint: "标示唯一的城市代码, 查询地址：http://wenku.baidu.com/view/af4281bafd0a79563c1e7287.html"%>
    <%= f.input :province_id, :label => "所属省份", collection: Province.all.map { |p| [p.name, p.id] }, prompt: "-- 请选择省份 --" %>
    <div class="form-actions">
      <%= f.submit "保存", :disable_with => "正在提交...", :class => "btn btn-success" %>
      <%= link_to "返回", :back, :class => "btn" %>
    </div>
  </fieldset>
<% end %>
