
<li class="coach-item">
    <%= render_coach_icon(coach, :thumb) %>
    <h2><%= render_coach_info(coach) %></h2>
    <p class="intro"><%= truncate( render_coupon_title(coach), :length => 30) %></p>
    <p class="scj tr">市场价<span class="del">￥<%= coach.price %></span>
    </p>
    <%= render_coupon_info(coach) %>
    <div class="tr sale">
      <span class="star inline-block">
          <span class="rate-start inline-block" style="width:<%= render_star_percent(coach) %>%"></span>
      </span> 
      <%= render_coupon_count(coach) %>&nbsp;<span style="font-size:12px;"><%= coach.comments_count %>人评价</span>
    </div>
</li>
