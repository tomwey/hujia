<% content_for :sitemap do %>
  <span class="current">驾校信息</span>
<% end %>

<%= render_list_header("驾校信息", "新建驾校信息", "/cpanel/schools/new" ) %>
<table class="table table-hover">
  <tr class="head">
    <td class="first">ID</td>
    <td>Icon</td>
    <td>驾校名称</td>
    <td style="width:200px">驾校地址</td>
    <td>咨询电话</td>
    <td>学车价格</td>
    <td>at</td>
    <td style="width:140px"></td>
  </tr>
  
  <% @schools.each do |school| %>
  <tr>
    <td class="first"><%= school.id %></td>
    <td><%= render_school_icon(school) %></td>
    <td><%= link_to school.name, [:cpanel, school] %></td>
    <td><%= school.location %></td>
    <td><%= school.phone %></td>
    <td><%= school.price %></td>
    <td><%= l school.created_at, :format => :short %></td>
    <td>
      <%= link_to "编辑", edit_cpanel_school_path(school), :class => "btn btn-mini" %>
      <%= link_to "删除", cpanel_school_path(school), :confirm => "你确定吗？", :method => :delete, :class => "btn btn-mini btn-danger" %>
    </td>
  </tr>
  <% end %>
</table>

<div style="text-align:center;"><%= will_paginate @schools %></div>